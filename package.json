{
  "name": "federated-widget",
  "version": "0.7.0",
  "description": "module federation app",
  "main": "server.js",
  "license": "MIT",
  "config": {
    "port": "8080",
    "holidays_host": "http://backend-api-host",
    "alter_holidays_host": "http://backend-api-alternative-host",
    "widget_host": "http://localhost:8080/"
  },
  "scripts": {
    "start": "AGGREGATOR_URL=$npm_package_config_holidays_host webpack-dev-server --progress --open --config webpack.dev.js",
    "clear": "rm -rf dist",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint *.js ./src/**/*{js,jsx} --color --format stylish --fix",
    "start-serve": "PORT=$npm_package_config_port PUBLIC_URL=$npm_package_config_widget_host AGGREGATOR_URL=$npm_package_config_holidays_host node server.js",
    "serve": "yarn run build && yarn run start-serve",
    "start-serve-daemon": "PORT=$npm_package_config_port PUBLIC_URL=$npm_package_config_widget_host AGGREGATOR_URL=$npm_package_config_holidays_host forever start --minUptime=1000 --spinSleepTime=1000 server.js",
    "stop-serve-daemon": "forever stopall",
    "stop-daemon": "forever stop",
    "serve-daemon-list": "forever list",
    "build-consumer": "webpack --config webpack.consumer.js",
    "start-consumer": "webpack-dev-server --progress --config webpack.consumer.js",
    "consume": "yarn run build-consumer && yarn run start-consumer",
    "federate": "yarn clear && yarn build && yarn start-serve-daemon && yarn consume"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.17.1",
    "mobx": "6.0.4",
    "mobx-react": "7.0.5",
    "react": "17.0.0",
    "react-dom": "17.0.0",
    "styled-components": "5.2.3"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/preset-env": "7.12.7",
    "@babel/preset-react": "7.12.7",
    "@babel/runtime": "7.12.5",
    "@svgr/webpack": "5.5.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "bundle-loader": "0.5.6",
    "css-loader": "5.0.1",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-standart": "0.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-standard": "5.0.0",
    "file-loader": "6.2.0",
    "forever": "3.0.4",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "4.5.0",
    "html-webpack-plugin-remove": "0.1.0",
    "html-webpack-skip-assets-plugin": "0.0.2",
    "preset-react": "1.0.0",
    "prettier": "2.2.1",
    "style-loader": "2.0.0",
    "url-loader": "4.1.1",
    "webpack": "5.0.0-beta.23",
    "webpack-assets-manifest": "4.0.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-manifest-plugin": "3.0.0",
    "webpack-merge": "5.4.0"
  }
}
